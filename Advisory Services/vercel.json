{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "^/api/forms/apply$", "dest": "/api/forms/apply.ts" },
    { "src": "^/api/forms/subscribe$", "dest": "/api/forms/subscribe.ts" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "^/apply/([^/]+)$", "dest": "/apply/$1.html" },
    { "src": "^/([^/.]+)$", "dest": "/$1.html" },
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}
